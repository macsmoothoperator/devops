6th Assignment 
  
  pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yourusername/yourrepo.git'
            }
        }
        stage('Build Application') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t myapp:latest .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh 'docker rm -f myapp_instance || true' // Remove if exists
                sh 'docker run -d -p 8080:80 --name myapp_instance myapp:latest'
            }
        }
    }
}
